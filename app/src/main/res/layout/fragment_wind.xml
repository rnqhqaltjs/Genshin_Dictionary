<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".character.HeroFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">


            <ImageView
                android:id="@+id/venti"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderline"
                android:src="@drawable/venti"
                app:layout_column="0"
                app:layout_row="0" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="벤티"
                app:layout_column="0"
                app:layout_gravity="center_horizontal"
                app:layout_row="2" />

            <ImageView
                android:id="@+id/xiao"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderline"
                android:src="@drawable/xiao"
                app:layout_column="1"
                app:layout_row="0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="소"
                app:layout_column="1"
                app:layout_gravity="center_horizontal"
                app:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                app:layout_column="0"
                app:layout_gravity="center_horizontal"
                app:layout_row="1"
                android:textColor="#FFBD1B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                app:layout_column="1"
                app:layout_gravity="center_horizontal"
                app:layout_row="1"
                android:textColor="#FFBD1B"/>

            <ImageView
                android:id="@+id/zhin"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderline"
                android:src="@drawable/zhin"
                app:layout_column="2"
                app:layout_row="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="진"
                app:layout_column="2"
                app:layout_gravity="center_horizontal"
                app:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                app:layout_column="2"
                app:layout_gravity="center_horizontal"
                app:layout_row="1"
                android:textColor="#FFBD1B"/>

            <ImageView
                android:id="@+id/kazuha"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderline"
                android:src="@drawable/kazuha"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="카에데하라 카즈하"
                app:layout_column="0"
                app:layout_gravity="center_horizontal"
                app:layout_row="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                app:layout_column="0"
                app:layout_gravity="center_horizontal"
                app:layout_row="4"
                android:textColor="#FFBD1B"/>

            <ImageView
                android:id="@+id/sayu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderline"
                android:src="@drawable/sayu"
                app:layout_column="1"
                app:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="사유"
                app:layout_column="1"
                app:layout_gravity="center_horizontal"
                app:layout_row="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★"
                app:layout_column="1"
                app:layout_gravity="center_horizontal"
                app:layout_row="4"
                android:textColor="#FFBD1B"/>

            <ImageView
                android:id="@+id/sugar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/borderline"
                android:src="@drawable/sugar"
                app:layout_column="2"
                app:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="설탕"
                app:layout_column="2"
                app:layout_gravity="center_horizontal"
                app:layout_row="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★"
                android:textColor="#FFBD1B"
                app:layout_column="2"
                app:layout_gravity="center_horizontal"
                app:layout_row="4" />

        </androidx.gridlayout.widget.GridLayout>

    </FrameLayout>

</ScrollView>